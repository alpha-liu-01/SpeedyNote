/*
 * SpeedyNote Launcher Styles (Light Mode)
 * 
 * Phase P.3: New launcher UI styling
 * Touch-first design with 44px minimum touch targets
 */

/* ==========================================================================
   Main Window
   ========================================================================== */

Launcher {
    background: #f5f5f5;
}

/* ==========================================================================
   Navigation Sidebar
   ========================================================================== */

#LauncherNavSidebar {
    background: #ffffff;
    border-right: 1px solid #e0e0e0;
}

#LauncherNavSeparator {
    background: #e0e0e0;
    max-height: 1px;
    margin: 8px 0px;
}

/* Note: LauncherNavButton uses custom painting, not QSS */

/* ==========================================================================
   Content Views
   ========================================================================== */

#TimelineView, #StarredViewWidget, #SearchViewWidget {
    background: #fafafa;
}

/* ==========================================================================
   Timeline List
   ========================================================================== */

#TimelineList {
    background: transparent;
    border: none;
}

#TimelineList::item {
    background: transparent;
    border: none;
}

/* Note: Timeline items use TimelineDelegate custom painting */

/* ==========================================================================
   Search View
   ========================================================================== */

#SearchBar {
    background: transparent;
}

#SearchInput {
    background: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 22px;
    padding: 10px 20px;
    padding-right: 40px; /* Space for clear button */
    font-size: 15px;
    color: #333333;
    selection-background-color: #b3d4fc;
}

#SearchInput:focus {
    border-color: #1a73e8;
}

#SearchInput::placeholder {
    color: #999999;
}

#SearchButton, #ClearButton {
    background: #f0f0f0;
    border: 1px solid #e0e0e0;
    border-radius: 22px;
    color: #666666;
    font-size: 16px;
    font-weight: bold;
}

#SearchButton:hover, #ClearButton:hover {
    background: #e8e8e8;
    border-color: #d0d0d0;
}

#SearchButton:pressed, #ClearButton:pressed {
    background: #d8d8d8;
}

#StatusLabel {
    color: #666666;
    font-size: 13px;
    padding: 4px 0px;
}

#EmptyLabel {
    color: #888888;
    font-size: 14px;
    padding: 40px 20px;
}

#SearchScrollArea {
    background: transparent;
    border: none;
}

#SearchScrollContent {
    background: transparent;
}

/* ==========================================================================
   Starred View
   ========================================================================== */

#StarredScrollArea {
    background: transparent;
    border: none;
}

#StarredScrollContent {
    background: transparent;
}

#FolderSection {
    background: transparent;
}

#NotebookGrid {
    background: transparent;
}

/* Starred list view (Model/View virtualized) */
#StarredListView {
    background: transparent;
    border: none;
}

#StarredListView::item {
    background: transparent;
    border: none;
}

/* Search list view (Model/View virtualized) */
#SearchListView {
    background: transparent;
    border: none;
}

#SearchListView::item {
    background: transparent;
    border: none;
}

/* Folder headers use FolderHeader custom painting */

/* ==========================================================================
   Scroll Bars (Touch-friendly)
   ========================================================================== */

QScrollBar:vertical {
    background: transparent;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    min-height: 40px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(0, 0, 0, 0.35);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
    height: 0px;
}

/* ==========================================================================
   Context Menus
   ========================================================================== */

QMenu {
    background: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 4px 0px;
}

QMenu::item {
    padding: 10px 24px;
    font-size: 14px;
    color: #333333;
}

QMenu::item:selected {
    background: rgba(66, 133, 244, 0.1);
}

QMenu::item:disabled {
    color: #999999;
}

QMenu::separator {
    height: 1px;
    background: #e0e0e0;
    margin: 4px 8px;
}

/* ==========================================================================
   Message Boxes and Dialogs
   ========================================================================== */

QMessageBox {
    background: #ffffff;
}

QMessageBox QLabel {
    color: #333333;
    font-size: 14px;
}

QInputDialog {
    background: #ffffff;
}

QInputDialog QLineEdit {
    background: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #333333;
}

QInputDialog QLineEdit:focus {
    border-color: #1a73e8;
}

/* ==========================================================================
   Tooltips
   ========================================================================== */

QToolTip {
    background: #333333;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 12px;
}
