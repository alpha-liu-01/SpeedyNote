/*
 * SpeedyNote Launcher Styles (Dark Mode)
 * 
 * Phase P.3: New launcher UI styling
 * Touch-first design with 44px minimum touch targets
 */

/* ==========================================================================
   Main Window
   ========================================================================== */

Launcher {
    background: #1e1e1e;
}

/* ==========================================================================
   Navigation Sidebar
   ========================================================================== */

#LauncherNavSidebar {
    background: #252525;
    border-right: 1px solid #3a3a3a;
}

#LauncherNavSeparator {
    background: #3a3a3a;
    max-height: 1px;
    margin: 8px 0px;
}

/* Note: LauncherNavButton uses custom painting, not QSS */

/* ==========================================================================
   Content Views
   ========================================================================== */

#TimelineView, #StarredViewWidget, #SearchViewWidget {
    background: #1e1e1e;
}

/* ==========================================================================
   Timeline List
   ========================================================================== */

#TimelineList {
    background: transparent;
    border: none;
}

#TimelineList::item {
    background: transparent;
    border: none;
}

/* Note: Timeline items use TimelineDelegate custom painting */

/* ==========================================================================
   Search View
   ========================================================================== */

#SearchBar {
    background: transparent;
}

#SearchInput {
    background: #2d2d2d;
    border: 1px solid #3a3a3a;
    border-radius: 22px;
    padding: 10px 20px;
    padding-right: 40px;
    font-size: 15px;
    color: #e0e0e0;
    selection-background-color: #264f78;
}

#SearchInput:focus {
    border-color: #8ab4f8;
}

#SearchInput::placeholder {
    color: #757575;
}

#SearchButton, #ClearButton {
    background: #3a3a3a;
    border: 1px solid #4a4a4a;
    border-radius: 22px;
    color: #b0b0b0;
    font-size: 16px;
    font-weight: bold;
}

#SearchButton:hover, #ClearButton:hover {
    background: #4a4a4a;
    border-color: #5a5a5a;
}

#SearchButton:pressed, #ClearButton:pressed {
    background: #555555;
}

#StatusLabel {
    color: #9e9e9e;
    font-size: 13px;
    padding: 4px 0px;
}

#EmptyLabel {
    color: #757575;
    font-size: 14px;
    padding: 40px 20px;
}

#SearchScrollArea {
    background: transparent;
    border: none;
}

#SearchScrollContent {
    background: transparent;
}

/* ==========================================================================
   Starred View
   ========================================================================== */

#StarredScrollArea {
    background: transparent;
    border: none;
}

#StarredScrollContent {
    background: transparent;
}

#FolderSection {
    background: transparent;
}

#NotebookGrid {
    background: transparent;
}

/* Folder headers use FolderHeader custom painting */

/* ==========================================================================
   Scroll Bars (Touch-friendly)
   ========================================================================== */

QScrollBar:vertical {
    background: transparent;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    min-height: 40px;
}

QScrollBar::handle:vertical:hover {
    background: rgba(255, 255, 255, 0.35);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
    height: 0px;
}

/* ==========================================================================
   Context Menus
   ========================================================================== */

QMenu {
    background: #2d2d2d;
    border: 1px solid #3a3a3a;
    border-radius: 8px;
    padding: 4px 0px;
}

QMenu::item {
    padding: 10px 24px;
    font-size: 14px;
    color: #e0e0e0;
}

QMenu::item:selected {
    background: rgba(138, 180, 248, 0.15);
}

QMenu::item:disabled {
    color: #666666;
}

QMenu::separator {
    height: 1px;
    background: #3a3a3a;
    margin: 4px 8px;
}

/* ==========================================================================
   Message Boxes and Dialogs
   ========================================================================== */

QMessageBox {
    background: #2d2d2d;
}

QMessageBox QLabel {
    color: #e0e0e0;
    font-size: 14px;
}

QInputDialog {
    background: #2d2d2d;
}

QInputDialog QLineEdit {
    background: #1e1e1e;
    border: 1px solid #3a3a3a;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #e0e0e0;
}

QInputDialog QLineEdit:focus {
    border-color: #8ab4f8;
}

/* ==========================================================================
   Tooltips
   ========================================================================== */

QToolTip {
    background: #424242;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 12px;
}
